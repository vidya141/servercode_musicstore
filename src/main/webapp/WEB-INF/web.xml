<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <!-- Servlets -->
    <servlet>
        <servlet-name>Songs</servlet-name>
        <servlet-class>com.myapp.servlet.songservlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Songs</servlet-name>
        <url-pattern>/song</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>com.myapp.servlet.signupservlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.myapp.servlet.searchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SongPopUp</servlet-name>
        <servlet-class>com.myapp.servlet.songDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SongPopUp</servlet-name>
        <url-pattern>/songDetails</url-pattern>
    </servlet-mapping>



    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>musicstoregwt.html</welcome-file>
    </welcome-file-list>

</web-app>
